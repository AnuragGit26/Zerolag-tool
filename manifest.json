{
	"manifest_version": 3,
	"name": "New Case Alert - Sig Sev1/2 New Case Notification",
	"version": "3.0.3",
	"description": "This extension will help Triage Team to get notified for Sev1/Sev2 Cases for Sig - Sales/Service/Industry Cloud.",
	"content_scripts": [
		{
			"matches": [
				"https://orgcs.my.salesforce.com/*"
			],
			"js": [
				"jsforce.js",
				"jquery.min.js",
				"bootstrap.min.js",
				"background.js"
			]
		}
	],
	"action": {
		"default_icon": "case.png"
	},
	"background": {
		"service_worker": "background.js"
	},
	"icons": {
		"16": "case.png",
		"48": "case.png",
		"128": "case.png"
	},
	"permissions": [
		"storage",
		"activeTab",
		"scripting",
		"tabs",
		"alarms",
		"cookies"
	],
	"host_permissions": [
		"https://orgcs.lightning.force.com/",
		"https://orgcs.my.salesforce.com/services/data/v59.0",
		"https://orgcs.my.salesforce.com/services/data/*",
		"https://orgcs.my.salesforce.com/*",
		"https://login.Salesforce.com/*",
		"https://test.Salesforce.com/*",
		"https://test.salesforce.com/",
		"https://login.salesforce.com/",
		"https://maxcdn.bootstrapcdn.com/*"
	]
}